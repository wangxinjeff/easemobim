<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/easemob_bg"
    android:orientation="vertical">

    <com.hyphenate.easemob.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/ease_mm_title_back"
        app:titleBarTitle="@string/create_event">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/save"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_18" />

    </com.hyphenate.easemob.easeui.widget.EaseTitleBar>

    <View style="@style/devide_line_eee" />

    <View
        style="@style/devide_line_eee"
        android:layout_marginTop="@dimen/dp_7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_15">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="top"
                android:hint="@string/please_input_work_content"
                android:minLines="5"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:textColor="@color/color_text3"
                android:textColorHint="@color/color_text9"
                android:textSize="@dimen/sp_15" />

            <View style="@style/divider_line_eee_small" />

            <RelativeLayout
                android:id="@+id/rl_all_day"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/all_day"
                    android:textColor="@color/color_text3"
                    android:textSize="@dimen/sp_18" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sb_all_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:kswBackColor="@color/colorAccent"
                    />
            </RelativeLayout>

            <View style="@style/divider_line_eee_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start"
                        android:textColor="@color/color_text9"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="2018年7月10日"
                        android:textColor="@color/color_text9"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="11:46"
                        android:textColor="@color/color_text3"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end"
                        android:textColor="@color/color_text9"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="2018年7月10日"
                        android:textColor="@color/color_text9"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="11:46"
                        android:textColor="@color/color_text3"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/devide_line_eee" />

            <View
                style="@style/devide_line_eee"
                android:layout_marginTop="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_remain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/pressed_bg_select_grey_white"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/reminder"
                        android:textColor="@color/color_text3"
                        android:textSize="@dimen/sp_18" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_remain_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/time_work_start"
                            android:textColor="@color/color_text9"
                            android:textSize="@dimen/sp_18" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_layout_right" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/divider_line_eee_small"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15" />

                <RelativeLayout
                    android:id="@+id/rl_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/pressed_bg_select_grey_white"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/repeat"
                        android:textColor="@color/color_text3"
                        android:textSize="@dimen/sp_18" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_repeat_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/no_repeat"
                            android:textColor="@color/color_text9"
                            android:textSize="@dimen/sp_18" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_layout_right" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/devide_line_eee" />

            <View
                style="@style/devide_line_eee"
                android:layout_marginTop="@dimen/dp_10" />

            <RelativeLayout
                android:id="@+id/rl_deadline"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/deadline"
                    android:textColor="@color/color_text3"
                    android:textSize="@dimen/sp_18" />

                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/sb_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    style="@style/divider_line_eee_small"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_deadline_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="2018年7月10日"
                    android:textColor="@color/color_text9"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_deadline_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text=" 17:33"
                    android:textColor="@color/color_text3"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <View style="@style/devide_line_eee" />

            <View
                style="@style/devide_line_eee"
                android:layout_marginTop="@dimen/dp_10" />

            <EditText
                android:id="@+id/et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="top"
                android:hint="@string/add_work_remark"
                android:minLines="4"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:textColor="@color/color_text3"
                android:textColorHint="@color/color_text9"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>