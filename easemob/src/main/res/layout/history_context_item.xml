<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_bg_select_grey_white"
        android:padding="@dimen/dp_15">


        <com.hyphenate.easemob.easeui.widget.AvatarImageView
            android:id="@+id/iv_history_context_avatar"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:src="@drawable/em_default_avatar"
            app:aiv_TextSizeRatio="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_history_context_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toStartOf="@id/tv_history_context_chat"
            app:layout_constraintStart_toEndOf="@id/iv_history_context_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_history_context_avatar" />

        <TextView
            android:id="@+id/tv__history_context_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_text9"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@id/tv_history_context_enter"
            app:layout_constraintStart_toEndOf="@id/iv_history_context_avatar"
            app:layout_constraintTop_toBottomOf="@id/tv_history_context_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:id="@+id/tv_history_context_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="进入聊天"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_history_context_avatar" />

        <TextView
            android:id="@+id/tv_history_context_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="查看上下文"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_history_context_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/divider_color"
        />
</LinearLayout>