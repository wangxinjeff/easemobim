<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="测试"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/label_text_color"
        app:layout_constraintTop_toTopOf="@+id/tv_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="03/14"
        />

    <com.hyphenate.easemob.easeui.widget.AvatarImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="@+id/tv_user"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/label_text_color"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="test"
        android:lines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_come_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_200"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintStart_toEndOf="@+id/tv_user"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/label_text_color"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="来自"
        android:lines="1"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>