<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/easemob_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_reminder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/time_not_remind"
            android:textColor="@color/selected_text_blue_text3"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/hook_icon"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/devide_line_eee"
        android:layout_marginBottom="@dimen/dp_7" />
</LinearLayout>