<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_list_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/contact_list_item_icon_size"
            android:layout_height="@dimen/contact_list_item_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/contact_list_item_padding"
            android:src="@drawable/em_default_avatar" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/avatar"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/contact_list_item_text_size" />


        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/accept_btn_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_6"
            android:text="@string/agree"
            android:textColor="#309167"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />
    </RelativeLayout>

    <View style="@style/devide_line_eee" />

</LinearLayout>